	</select>


	
	<insert id="enrollProcess" parameterType="com.oht.second.vo.Member">
		insert into MEMBER(
						MEMID, MEMPWD, MEMNAME
						)
				values(
						#{memId}, #{memPwd}, #{memName}
					)
					
	
	
	</insert>
	
		
